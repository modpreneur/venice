<div class="contentProduct-productIndex">
    {% if count>0 %}
        <div class="box">
            <div id="product-grid"  data-config="{{ gridConfiguration }}">
            </div>
        </div>
    {% else %}
        <div class="row">
            <div class="span-none-padding-xlarge-24 margin-auto">
                <div class="span-none-xlarge-10 margin-top-20">
                    <div class="info-empty-form">
                        <div class="row"><i class="trinity-info"></i></div>
                        <div class="row"><h2 class="warning">NO DATA</h2></div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    {% if(is_granted('ROLE_ADMIN_CONTENT_PRODUCT_EDIT')) %}
        <div class="span-none-padding-xlarge-24 margin-auto">
            <div class="row">
                <div class="info-empty-form">
                    <a class="button button-addNew" id="newIcon" href="{{ path('admin_content_content_product_new', { 'id':content.id }) }}">
                        Add to product
                    </a>
                </div>
            </div>
        </div>

    {% endif %}
</div>
