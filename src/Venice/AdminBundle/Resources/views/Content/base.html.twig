{% extends('VeniceAdminBundle::adminBase.html.twig') %}

{% block pageIcon %}
    <i class="tiecons tiecons-video"></i>
{% endblock %}

{% block pageAction %}
    {% if is_granted('ROLE_ADMIN_CONTENT_EDIT') %}
        <span class="tooltip">
            <span class="tooltip-hover">
                <a class="new-entry" id="newEntryIcon" href="{{ path('admin_content_new') }}">
                    <i class="tiecons tiecons-plus-light"></i>
                </a>
                <div class="tooltip-left">Create a new content</div>
            </span>
        </span>
    {% endif %}
{% endblock %}