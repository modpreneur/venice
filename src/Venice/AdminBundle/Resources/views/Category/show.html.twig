<div class="wrapper-grid">
    <div class="category-show">
        <table class="record_properties grid">
            <tbody>
                <tr>
                    <th>#</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Handle</th>
                    <td>{{ category.handle }}</td>
                </tr>
                <tr>
                    <th>Articles</th>
                    <td>
                        <ul>
                        {% for index, article in category.blogArticles %}
                            <li>
                                <a href="{{ path("admin_blog_article_tabs", {"id": article.id}) }}">{{ article.title }}</a>
                            </li>
                        {% endfor %}
                        </ul>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>