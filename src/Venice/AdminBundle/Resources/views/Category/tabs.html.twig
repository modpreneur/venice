{% extends "VeniceAdminBundle::Category/base.html.twig" %}

{% block pageTitle %}
    Category {{ category.name }}
{% endblock %}

{% block pageBody %}
    <div class="tabs-wrapper">
        <input type="radio" name="tab" id="tab1" class="tab-head" checked />
        <label for="tab1">Show</label>

        {% if is_granted('ROLE_ADMIN_BLOG_EDIT') %}
            <input type="radio" name="tab" id="tab2" class="tab-head" />
            <label for="tab2">Edit</label>

            <input type="radio" name="tab" id="tab3" class="tab-head" />
            <label for="tab3">Danger zone</label>
        {% endif %}

        <div class="tab-body-wrapper">
            {% if is_granted('ROLE_ADMIN_BLOG_VIEW') %}
                <div id="tab-body-1" class="tab-body" data-source="{{ path('admin_category_show', {'id': category.id}) }}"></div>
            {% endif %}
            {% if is_granted('ROLE_ADMIN_BLOG_EDIT') %}
                <div id="tab-body-2" class="tab-body" data-source="{{ path('admin_category_edit', {'id': category.id}) }}"></div>
                <div id="tab-body-3" class="tab-body" data-source="{{ path("admin_category_delete_tab", {'id': category.id}) }}"></div>
            {% endif %}
        </div>
    </div>

{% endblock %}