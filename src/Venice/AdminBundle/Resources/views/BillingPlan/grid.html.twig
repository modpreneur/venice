{% block cell__id %}
    {{ row.getId() }}
{% endblock %}

{% block cell_id %}
    {{ value }}
{% endblock %}

{% block cell_necktieDefault %}

    {#the BP is ncktie default#}
    {% if row.getProduct().getNecktieDefaultBillingPlan() and row.getId() == row.getProduct().getNecktieDefaultBillingPlan().getId %}
        <div class="is-default" id="is-default-id-{{ row.getId()}}">
            <i class="trinity trinity-yes"></i>
        </div>

    {% else %}

        <div class="is-default" id="is-default-id-{{ row.getId()}}">
            <i class="trinity trinity-close"></i>
        </div>

    {% endif %}
{% endblock %}

{% block cell_veniceDefault %}
    {% if row.getProduct().getVeniceDefaultBillingPlan() and row.getId() == row.getProduct().getVeniceDefaultBillingPlan().getId %}


        <div class="is-default"
             id="venice-defaul-setter-{{ row.getId() }}"
             data-state="is"
             onmouseenter="window.veniceDefaultBP('venice-defaul-setter-{{ row.getId() }}');"
             onclick="window.veniceDefaultBP('venice-defaul-setter-{{ row.getId() }}');"
             onmouseleave="window.veniceDefaultBP('venice-defaul-setter-{{ row.getId() }}');"
             data-states="{{ '{"set":{"parentClasses":"set-default","childClasses":"trinity trinity-yes"},"is":{"parentClasses":"is-default","childClasses":"trinity trinity-pin"},"unset":{"parentClasses":"unset-default","childClasses":"trinity trinity-close"},"loading":{"parentClasses":"loading-icon-for-default","childClasses":"tiecons tiecons-loading tiecons-rotate"}}' }}"
        >
            <i class="trinity trinity-yes"></i>
        </div>

    {% else %}
        <div class="is-default"
             data-state="set"
             data-states="{{ '{"set":{"parentClasses":"set-default","childClasses":"trinity trinity-yes"},"is":{"parentClasses":"is-default","childClasses":"trinity trinity-pin"},"unset":{"parentClasses":"unset-default","childClasses":"trinity trinity-close"},"loading":{"parentClasses":"loading-icon-for-default","childClasses":"tiecons tiecons-loading tiecons-rotate"}}' }}"
        >
            <i class="trinity trinity-pin"></i>
        </div>

    {% endif %}
{% endblock %}

{% block cell_initialPrice %}
    {{ value|localizedcurrency(get_setting('currency')) }}
{% endblock %}

{% block cell_details %}
 <a href="{{ path('admin_billing_plan_tabs',{'productId':row.getProduct().getId(),'id':row.getId()}) }}" class="button-small margin-none-all">Get details</a>
{% endblock %}