{% extends "VeniceAdminBundle::adminBase.html.twig" %}

{% block pageTitle %}
    Association
{% endblock %}

{% block pageBody %}

    <div class="tabs-wrapper">
        {% if is_granted("ROLE_ADMIN_CONTENT_PRODUCT_VIEW") %}
            <input type="radio" name="tab" id="tab1" class="tab-head" checked />
            <label for="tab1">Show</label>
        {% endif %}

        {% if is_granted("ROLE_ADMIN_CONTENT_PRODUCT_EDIT") %}
            <input type="radio" name="tab" id="tab2" class="tab-head" />
            <label for="tab2">Edit</label>

            <input type="radio" name="tab" id="tab3" class="tab-head" />
            <label for="tab3">Danger zone</label>
        {% endif %}

        <div class="tab-body-wrapper">
            {% if is_granted("ROLE_ADMIN_CONTENT_PRODUCT_VIEW") %}
                <div id="tab-body-1" class="tab-body" data-source="{{ path('admin_product_content_product_show', {'id': contentProduct.id}) }}"></div>
            {% endif %}

            {% if is_granted("ROLE_ADMIN_CONTENT_PRODUCT_EDIT") %}
                <div id="tab-body-2" class="tab-body" data-source="{{ path('admin_product_content_product_edit', {'id': contentProduct.id}) }}"></div>
                <div id="tab-body-3" class="tab-body" data-source="{{ path("admin_product_content_product_delete_tab", {'id': contentProduct.id})}}"></div>
            {% endif %}

        </div>
    </div>

{% endblock %}