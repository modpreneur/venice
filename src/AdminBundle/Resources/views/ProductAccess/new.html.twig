{% extends('AdminBundle::adminBase.html.twig') %}

{% block pageTitle %}
    Product access
{% endblock %}

{% block pageIcon %}
    <i class="tiecons tiecons-share-negative"></i>
{% endblock %}

{% block pageBody %}
    <div class="box box-new-form">
        <div class="row">
            {{ form_start(form, {'attr': {'class': 'new-form'}} ) }}
            {{ form_errors(form) }}

            {{ form_row(form.product) }}
            {{ form_row(form.fromDate) }}
            {{ form_row(form.toDate) }}
            {{ form_row(form.user) }}

            {{ form_row(form.submit, {'attr': {'class': 'button new'}} ) }}

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}