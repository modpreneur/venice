{% extends('AdminBundle::adminBase.html.twig') %}

{% block pageIcon %}
    <i class="tiecons tiecons-pin-right-negative"></i>
{% endblock %}

{% block pageTitle %}
    Associations
{% endblock %}

{% block pageBody %}
    <div class="box box-new-form">
        <div class="row">
            {{ form_start(form, {'attr': {'class': 'edit-form'}} ) }}
            {{ form_errors(form) }}

            {{ form_row(form.content) }}
            {{ form_row(form.product) }}
            {{ form_row(form.delay) }}
            {{ form_row(form.orderNumber) }}

            {{ form_row(form.submit, {'attr': {'class': 'button edit'}} ) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}