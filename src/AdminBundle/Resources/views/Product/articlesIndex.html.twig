<div class="wrapper-grid">
    <ul>
        {% for blogArticle in blogArticles %}
            <li>
                <h4><a href="{{ path('admin_blog_article_tabs', {'id': blogArticle.id}) }}">{{ blogArticle.title }}</a></h4>
            </li>
        {% endfor %}
    </ul>

    {% if(is_granted('ROLE_ADMIN_PRODUCT_EDIT') and is_granted('ROLE_ADMIN_BLOG_EDIT') ) %}
        <div class="span-none-padding-xlarge-24 margin-auto">
            <div class="row">
                <div class="info-empty-form">
                    <a class="button button-addNew" id="newIcon" href="{{ path('admin_blog_article_new') }}">
                        Add new blog article
                    </a>
                </div>
            </div>
        </div>
    {% endif %}
</div>