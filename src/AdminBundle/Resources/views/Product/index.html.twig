{% extends('AdminBundle::adminBase.html.twig') %}

{% block pageTitle %}
    Products
{% endblock %}

{% block pageIcon %}
    <i class="trinity trinity-products"></i>
{% endblock %}

{% block pageAction %}
    {% if is_granted('ROLE_ADMIN_PRODUCT_EDIT') %}
        {#todo: button to create 2 product types?#}
    {% endif %}
{% endblock %}


{% block pageBody %}
    {% if is_granted('ROLE_ADMIN_PRODUCT_EDIT') %}
        <a href="{{ path("admin_product_new", {"productType":"free"}) }}" class="button">New free</a>
        <a href="{{ path("admin_product_new", {"productType":"standard"}) }}" class="button">New standard</a>
    {% endif %}
    <div class="wrapper-grid">
        <ul>
            {% for product in products %}
                <li>
                    <h4><a href="{{ path('admin_product_tabs', {'id': product.id}) }}"> {{ product.name }}</a></h4>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}