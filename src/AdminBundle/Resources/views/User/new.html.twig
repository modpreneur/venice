{% extends('AdminBundle::adminBase.html.twig') %}

{% block pageIcon %}
    <i class="trinity trinity-user"></i>
{% endblock %}

{% block pageTitle %}
    New user
{% endblock %}

{% block pageAction %}
    {% if is_granted('ROLE_ADMIN_BLOG_EDIT') %}
        <div class="navigation-box row margin-top-20">
            <a class="new-entry" id="newEntryIcon" href="{{ path('admin_user_new') }}">
                <i class="trinity trinity-plus"></i>
            </a>
        </div>
    {% endif %}
{% endblock %}

{% block pageBody %}
    <div class="box box-new-form">
        <div class="row">
            {{ form_start(form, {'attr': {'class': 'new-form'}} ) }}
            {{ form_errors(form) }}

            {# Render all form rows except the submit input #}
            {% for key, item in form.children if key != "submit"%}
                {{ form_row(form[key]) }}
            {% endfor %}

            {{ form_row(form.submit, {'attr': {'class': 'button new'}} ) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}