<div class="box box-edit-form">
    {{ form_start(form, {'attr': {'class': 'edit-form'}} ) }}
    <div class="row">
        {{ form_errors(form) }}

        {{ form_row(form.title) }}
        {{ form_row(form.handle) }}
        {{ form_row(form.dateToPublish, {'attr': {'class': 'dateSelect'}}) }}
        {{ form_row(form.products) }}
    </div>
    {{ form_widget(form.content) }}

    {{ form_row(form.submit, {'attr': {'class': 'button create'}} ) }}
    {{ form_end(form) }}
</div>
