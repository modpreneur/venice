{% extends ":AdminBundle:adminBase.html.twig" %}

{% block pageTitle %}
    User {{ user.fullNameOrUsername }}
{% endblock %}

{% block pageIcon %}
    <i class="trinity trinity-user"></i>
{% endblock %}

{% block pageBody -%}

    <div class="tabs-wrapper margin-top-20">

        <input type="radio" name="tab" id="tab1" class="tab-head" checked />
        <label for="tab1">Edit</label>

        <input type="radio" name="tab" id="tab2" class="tab-head" />
        <label for="tab2">Danger zone</label>

        <div class="tab-body-wrapper">
            <div id="tab-body-1" class="tab-body" data-source="{{ path('admin_user_edit', {'id': user.id}) }}"></div>
            <div id="tab-body-2" class="tab-body" data-source="{{ path('admin_user_delete_tab', {'id': user.id}) }}"></div>
        </div>
    </div>

{% endblock %}

